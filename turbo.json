{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "website/out/**", "publishing/build/**"]
    },
    "buildpack": {
      "dependsOn": ["^buildpack"],
      "outputs": ["dist/**"]
    }
  }
}
